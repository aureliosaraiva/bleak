				<div class="nav-logo">
					<a href="{{@blog.url}}">
					   <img src="{{@blog.logo}}" alt="Logo" /> <span class="name">{{@blog.title}}</span>
					</a>
				</div>
				<div class="nav-menu">
					{{#if @blog.navigation}}
					<a class="menu" data-action="menu" data-target="menu"><i class="icon-menu"></i></a>
					{{/if}}
				</div>
                </div>  
			</nav>		
        
			{{{body}}}
