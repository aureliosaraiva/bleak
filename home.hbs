{{!< default}}

<header id="header" class="header{{#if @blog.cover}} has-cover{{/if}}">
    <div class="inner">
        <a class="header-title" href="{{@blog.url}}">
            <img class="header-logo" src="{{@blog.logo}}" alt="Logo" />
            <h1 class="header-name">{{@blog.title}}</h1>
            {{#if @blog.description}}
                <span class="header-description">{{@blog.description}}</span>
                <span class="header-subdescription">Livrio facilita e torna mais seguro o empréstimo de livros</span>
            {{/if}}
        </a>
            

            <ul class="social">
              <li><a href="https://twitter.com/livrioapp" target="_blank"><i class="fa fa-twitter"></i></a></li>
              <li><a href="https://www.facebook.com/livrio" target="_blank"><i class="fa fa-facebook"></i></a></li>
              <li><a href="http://google.com/+LivrIoapp" target="_blank"><i class="fa fa-google-plus"></i></a></li>
            </ul>
        
    </div>
    {{#if @blog.cover}}
    <div class="header-cover" style="background-image: url({{@blog.cover}})"></div>
    {{/if}}

</header>

<div class="header-store">
    <a href="https://play.google.com/store/apps/details?id=io.livr.app&utm_source=site&utm_medium=link&utm_content=footer&utm_campaign=FooterSite"><img alt="Baixe na Google Play" src="https://play.google.com/intl/en_us/badges/images/generic/pt-br-play-badge.png"></a>

    <a href="https://itunes.apple.com/us/app/livrio/id1053466697?l=pt&ls=1&mt=8&utm_source=site&utm_medium=link&utm_content=footer&utm_campaign=FooterSite"><img alt="Baixe na Apple Store" src="{{asset "img/apple.png"}}"></a>
</div>



