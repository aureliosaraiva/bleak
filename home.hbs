                </div>
              </div>
            </div>
            <!--app features container end--> 
            
          </div>
          <div class="col-md-4 " style="text-align: right"> <img src="{{asset "img/feature-2.png"}}" alt="App Feature img"> 

          </div>
        </div>

</div>

<div class="header-store faixa">
    <a href="https://play.google.com/store/apps/details?id=io.livr.app&utm_source=site&utm_medium=link&utm_content=footer&utm_campaign=FooterSite"><img alt="Baixe na Google Play" src="https://play.google.com/intl/en_us/badges/images/generic/pt-br-play-badge.png"></a>

    <a href="https://itunes.apple.com/us/app/livrio/id1053466697?l=pt&ls=1&mt=8&utm_source=site&utm_medium=link&utm_content=footer&utm_campaign=FooterSite"><img alt="Baixe na Apple Store" src="{{asset "img/apple.png"}}"></a>
</div>

<div class="container blog">
<h2 class="t">Nosso blog</h2>
<div class="post-list">

<div id="push">

{{#foreach posts}}

<article class="{{post_class}}">
    <div class="inner">
        <a class="post-link" href="{{url absolute="true"}}"></a>
        {{#if image}}
        <figure class="post-image">
            <a href="{{url absolute="true"}}"><img src="{{image}}" alt="" /></a>
        </figure>
        {{/if}}
        <span class="post-meta">
            <span class="post-date">{{date format="DD MMM YYYY"}}</span>
        </span>
        <h2 class="post-title"><a href="{{url absolute="true"}}">{{{title}}}</a></h2>
        <p class="post-excerpt">{{excerpt words="15"}}&hellip;</p>
        <span class="post-more"><a href="{{url absolute="true"}}">Leia mais <i class="icon-arrow-right"></i></a></span>
    </div>
</article>

{{/foreach}}

</div>

</div>


</div>
